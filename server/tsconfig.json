{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express"],
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "node16"
  },
  "include": ["../server/**/*.ts", "../shared/**/*.ts", "../vite.config.ts"],
  "exclude": ["node_modules"]
}
